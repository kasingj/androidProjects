<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="#55de97">

    <fragment
        class= "com.example.kasingj.eurocapitals.descriptionFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:name="android.app.DialogFragment"
        android:id="@+id/descriptionFragment"
        android:layout_weight="4"
        android:layout_margin="10dp"
        tools:layout="@layout/description_frag_view" />

    <fragment
        class= "com.example.kasingj.eurocapitals.radioButtonFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:name="android.app.DialogFragment"
        android:id="@+id/radioButtonFragment"
        android:layout_weight="4"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        tools:layout="@layout/radio_button_frag_view" />

    <Button
        android:layout_width="138dp"
        android:layout_height="wrap_content"
        android:text="@string/choose"
        android:id="@+id/studyButton"
        android:layout_gravity="center_horizontal"
        android:foregroundGravity="center_vertical|center_horizontal"
        android:layout_marginBottom="10dp"/>
</LinearLayout>
