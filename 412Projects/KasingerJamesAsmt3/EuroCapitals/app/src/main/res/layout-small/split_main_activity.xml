<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="#58cfa7">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="#304ffe">

        <fragment
            class="com.example.kasingj.eurocapitals.capitalFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:name="android.support.v4.app.DialogFragment"
            android:id="@+id/display"
            android:layout_weight="7"
            tools:layout="@layout/capital_fragment"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />

        <fragment
            class="com.example.kasingj.eurocapitals.guessFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:name="android.support.v4.app.DialogFragment"
            android:id="@+id/controls"
            android:layout_weight="3"
            tools:layout="@layout/guess_fragment"
            android:layout_margin="0dp"/>
    </LinearLayout>

</LinearLayout>
